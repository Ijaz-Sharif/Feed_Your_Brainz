<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_clr"
    tools:context=".Screens.ScoreActivity">
    <TextView
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        android:gravity="center"
        android:text="CONGRATULATION YOU HAVE FINISH THE SCIENCE QUIZ!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        android:gravity="center"
        android:text="You Got"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_bg"
        app:backgroundTint="#ffbd59"
        android:layout_marginTop="50dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
                android:id="@+id/score_text"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="4/5"
            android:textColor="@color/black"
            android:textSize="35sp" />
    </RelativeLayout>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/cup_img"/>
    <Button
        android:layout_margin="10dp"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:text="Go To Main"
        android:onClick="finish"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/view_bg"
        app:backgroundTint="#cf5001"
        tools:ignore="HardcodedText" />
</LinearLayout>